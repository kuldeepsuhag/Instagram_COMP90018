<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- toolbar -->
                <!--<include layout="@layout/snippet_top_nexttoolbar"/>-->

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relLayout1">
                <!--android:background="@drawable/grey_border_bottom">-->

                <ImageView
                    android:id="@+id/imageShare"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="40dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="centerCrop" />

                <EditText
                    android:id="@+id/caption"
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imageShare"
                    android:background="@null"
                    android:hint="Caption ..." />

                <CheckBox
                    android:id="@+id/geoShare"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:onClick="onCheckboxClicked"
                    android:text="Share my location" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="Share"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/wfShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="134dp"
                android:text="Share via Wifi"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="134dp" />

        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relLayout2"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="20dp"
        android:text="hide location"
        tools:ignore="NotSibling" />
</RelativeLayout>